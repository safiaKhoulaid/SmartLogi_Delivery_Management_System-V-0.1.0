<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1762645105473-1" author="ycode">
        <createTable tableName="tournees">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_tournees"/>
            </column>
            <column name="date_tournee" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="statut" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="distance_totale_km" type="DOUBLE"/>
            <column name="duree_estimee_heures" type="DOUBLE"/>
            <column name="livreur_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="zone_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1762645105473-2" author="ycode">
        <addColumn tableName="colis">
            <column name="ordre_livraison" type="INT"/>
            <column name="tournee_id" type="BIGINT"/>
        </addColumn>
    </changeSet>
    <changeSet id="1762645105473-4" author="ycode">
        <addForeignKeyConstraint baseColumnNames="tournee_id" baseTableName="colis" constraintName="FK_COLIS_ON_TOURNEE"
                                 referencedColumnNames="id" referencedTableName="tournees"/>
    </changeSet>
    <changeSet id="1762645105473-5" author="ycode">
        <addForeignKeyConstraint baseColumnNames="livreur_id" baseTableName="tournees"
                                 constraintName="FK_TOURNEES_ON_LIVREUR" referencedColumnNames="user_id"
                                 referencedTableName="livreur"/>
    </changeSet>
    <changeSet id="1762645105473-6" author="ycode">
        <addForeignKeyConstraint baseColumnNames="zone_id" baseTableName="tournees" constraintName="FK_TOURNEES_ON_ZONE"
                                 referencedColumnNames="id" referencedTableName="zone"/>
    </changeSet>

</databaseChangeLog>